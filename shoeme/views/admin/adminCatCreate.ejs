    <div class="container-fluid">
        <div class="row">
          <div class="col-sm-12 right">
            <div class="fline">
              <h2 class="mx-auto my-2">CREATE CATEGORY</h2>
            </div>
    
            <form action="/admin/addCategory" method="post" enctype="multipart/form-data">
              <input class="form-control" type="text" placeholder="Category Name" name="name" id="name" oninput="validateCategoryName()">
              <span class="text-danger d-flex justify-content-center align-items-center" id="nameError"></span>
              <div class="text-center">
                <img id="imagePreview" src="#" alt="Selected Image" style="display: none;">
              </div>
              <input class="form-control" type="file" name="image" required onchange="previewImage(event)">
              <button class="form-control login bg-dark" id="submitButton" disabled type="submit">ADD</button>
            </form>
          </div>
        </div>
      </div>

    <script src="/javascripts/validation Catcreate.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
